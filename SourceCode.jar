import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class BetterDrag {
    public static void main(String[] args) {
        // Create the main frame
        JFrame frame = new JFrame("BetterDrag");
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setSize(400, 300);
        frame.setLayout(new BorderLayout());

        // Create a container panel
        JPanel container = new JPanel();
        container.setLayout(new BoxLayout(container, BoxLayout.Y_AXIS));
        container.setBorder(BorderFactory.createEmptyBorder(20, 20, 20, 20));
        container.setBackground(Color.WHITE);

        // Add a label
        JLabel label = new JLabel("Welcome To BetterDrag");
        label.setAlignmentX(Component.CENTER_ALIGNMENT);
        label.setFont(new Font("Arial", Font.BOLD, 18));
        container.add(label);

        // Add a button
        JButton nextButton = new JButton("Next");
        nextButton.setAlignmentX(Component.CENTER_ALIGNMENT);
        nextButton.setBackground(new Color(0, 123, 255));
        nextButton.setForeground(Color.WHITE);
        nextButton.setFocusPainted(false);
        nextButton.setFont(new Font("Arial", Font.PLAIN, 16));
        nextButton.setBorder(BorderFactory.createEmptyBorder(10, 20, 10, 20));
        nextButton.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                JOptionPane.showMessageDialog(frame, "Next button clicked!");
            }
        });
        container.add(Box.createRigidArea(new Dimension(0, 20)));
        container.add(nextButton);

        // Add the container to the frame
        frame.add(container, BorderLayout.CENTER);

        // Center the frame on the screen
        frame.setLocationRelativeTo(null);

        // Set a custom cursor
        Toolkit toolkit = Toolkit.getDefaultToolkit();
        Image cursorImage = toolkit.getImage("C:/Users/defaultUser/BetterDragV2/Mouse_cursor.png");
        Cursor customCursor = toolkit.createCustomCursor(cursorImage, new Point(0, 0), "Custom Cursor");
        frame.setCursor(customCursor);

        // Show the frame
        frame.setVisible(true);
    }
}
// Add a menu bar
JMenuBar menuBar = new JMenuBar();
JMenu optionsMenu = new JMenu("Options");
JCheckBoxMenuItem enableBetterDrag = new JCheckBoxMenuItem("Enable BetterDrag");
optionsMenu.add(enableBetterDrag);
menuBar.add(optionsMenu);
frame.setJMenuBar(menuBar);

// Modify the button's action listener to support BetterDrag
nextButton.addActionListener(new ActionListener() {
    @Override
    public void actionPerformed(ActionEvent e) {
        if (enableBetterDrag.isSelected()) {
            for (int i = 0; i < 13; i++) {
                System.out.println("BetterDrag click " + (i + 1));
            }
        } else {
            JOptionPane.showMessageDialog(frame, "Next button clicked!");
        }
    }
});
