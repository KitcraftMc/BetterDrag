import javax.swing.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class Main {
    public static void main(String[] args) {
        // Create the main frame
        JFrame frame = new JFrame("BetterDrag Example");
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setSize(400, 300);

        // Create a button
        JButton nextButton = new JButton("Next");
        frame.add(nextButton);

        // Variables to store BetterDrag settings
        final boolean[] isBetterDragEnabled = {false};
        final int[] clickCount = {1}; // Default to 1 click

        // Add action listener for the "Next" button
        nextButton.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                // Show a dialog to configure BetterDrag settings
                JPanel panel = new JPanel();
                JCheckBox enableBetterDragCheckBox = new JCheckBox("Enable BetterDrag", isBetterDragEnabled[0]);
                JLabel clickCountLabel = new JLabel("Number of clicks (max 1000):");
                JTextField clickCountField = new JTextField(String.valueOf(clickCount[0]), 5);

                panel.add(enableBetterDragCheckBox);
                panel.add(clickCountLabel);
                panel.add(clickCountField);

                int result = JOptionPane.showConfirmDialog(frame, panel, "Configure BetterDrag", JOptionPane.OK_CANCEL_OPTION);

                if (result == JOptionPane.OK_OPTION) {
                    // Update BetterDrag settings based on user input
                    isBetterDragEnabled[0] = enableBetterDragCheckBox.isSelected();
                    try {
                        int inputClickCount = Integer.parseInt(clickCountField.getText());
                        if (inputClickCount > 0 && inputClickCount <= 1000) {
                            clickCount[0] = inputClickCount;
                        } else {
                            JOptionPane.showMessageDialog(frame, "Please enter a valid number between 1 and 1000.", "Invalid Input", JOptionPane.ERROR_MESSAGE);
                        }
                    } catch (NumberFormatException ex) {
                        JOptionPane.showMessageDialog(frame, "Please enter a valid number.", "Invalid Input", JOptionPane.ERROR_MESSAGE);
                    }
                }

                // Perform the action based on BetterDrag settings
                if (isBetterDragEnabled[0]) {
                    for (int i = 0; i < clickCount[0]; i++) {
                        System.out.println("BetterDrag click " + (i + 1));
                    }
                } else {
                    JOptionPane.showMessageDialog(frame, "Next button clicked!");
                }
            }
        });

        // Set layout and make the frame visible
        frame.setLayout(new java.awt.FlowLayout());
        frame.setVisible(true);
    }
}
// This code creates a simple GUI application with a button that allows the user to configure BetterDrag settings.
